# FinOps Agent Environment Variables
# Copy this file to .env.local and fill in your actual values

# ===========================================
# DATABASE
# ===========================================
# Neon PostgreSQL connection string (or Render managed PostgreSQL)
# Format: postgres://username:password@host:5432/database?sslmode=require
DATABASE_URL=postgres://user:password@localhost:5432/finops

# ===========================================
# AWS CREDENTIALS
# ===========================================
# AWS Access Key ID for Cost Explorer, CloudWatch, Trusted Advisor
AWS_ACCESS_KEY_ID=your_aws_access_key_id
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key
AWS_REGION=us-east-1

# ===========================================
# AI & MACHINE LEARNING
# ===========================================
# Google Generative AI (Gemini 2.5 Flash)
# Get your API key from: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key

# Pinecone Vector Database for RAG (Retrieval-Augmented Generation)
# Get your API key from: https://app.pinecone.io/
PINECONE_API_KEY=your_pinecone_api_key

# ===========================================
# SLACK INTEGRATION (Optional)
# ===========================================
# Slack Bot Token for notifications
# Create a Slack App and install to workspace: https://api.slack.com/apps
SLACK_BOT_TOKEN=xoxb-your-slack-bot-token
SLACK_CHANNEL_ID=C1234567890

# ===========================================
# SERVER CONFIGURATION
# ===========================================
# Port for the Express server (default: 5000)
PORT=5000

# Node environment (development, production, test)
NODE_ENV=development

# ===========================================
# OPTIONAL: SESSION & AUTHENTICATION
# ===========================================
# Session secret for express-session (generate a random string)
# SESSION_SECRET=your_random_session_secret_here

# ===========================================
# OPTIONAL: REPLIT CONFIGURATION
# ===========================================
# These are set automatically by Replit, uncomment if needed locally
# REPL_ID=your_repl_id
# REPL_SLUG=your_repl_slug
